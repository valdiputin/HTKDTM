<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:fillViewport="true"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Logo + Tên -->
        <LinearLayout
            android:id="@+id/logoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edupath_logo"
                android:contentDescription="@string/app_name"
                android:tint="@color/orange_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EduPath"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Chào mừng -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào mừng trở lại!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/orange_primary"
            app:layout_constraintTop_toBottomOf="@id/logoLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nice to see you back, you can log in and continue your learning progress"
            android:textAlignment="center"
            android:textColor="#777"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutEmail"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/gray"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#DDDDDD"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHint="#777"
                android:paddingStart="8dp"
                android:background="@null" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mật khẩu -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPassword"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/gray"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/gray"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#DDDDDD"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/layoutEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#777"
                android:paddingStart="8dp"
                android:background="@null" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textColor="#777"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/layoutPassword"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nút Đăng Nhập -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Đăng Nhập"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:background="@drawable/bg_button_orange"
            android:elevation="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvForgotPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nút đăng ký -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Chưa có tài khoản? Đăng ký ngay"
            android:textColor="@color/orange_primary"
            android:textStyle="bold"
            android:backgroundTint="@android:color/transparent"
            android:background="@drawable/bg_button_outline_orange"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Facebook -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFacebook"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Đăng nhập với Facebook"
            android:textColor="#1877F2"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="#DDDDDD"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnRegister"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Google -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Đăng nhập với Google"
            android:textColor="#DB4437"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="#DDDDDD"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnFacebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Điều khoản -->
        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="By creating an account, you agree to EduPath&apos;s Terms &amp; Conditions and Privacy Policy"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="#777"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnGoogle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
