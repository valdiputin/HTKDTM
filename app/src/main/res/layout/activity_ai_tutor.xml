<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AITutorActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ai_tutor_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_lesson_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ai_tutor_context_placeholder"
        android:padding="12dp"
        android:background="#EEEEEE"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_create_mcq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_mcq_button"
        android:backgroundTint="#FFB300"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_create_open_ended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_open_ended_button"
        android:backgroundTint="#808080"
        android:textColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_ai_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/ai_tutor_result_placeholder"/>
    </ScrollView>

</LinearLayout>