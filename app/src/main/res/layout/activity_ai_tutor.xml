<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".AITutorActivity">

    <TextView
        android:id="@+id/aiTutorTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ai_tutor_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/aiTutorTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nội dung đang ôn tập:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#007BFF"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_lesson_context"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ai_tutor_context_placeholder"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:maxLines="6"
                        android:ellipsize="end"
                        tools:text="Nguyên tắc thiết kế UI/UX cơ bản là sự dễ sử dụng và tính thẩm mỹ. Giao diện người dùng (UI) tập trung vào bố cục và màu sắc..." />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chọn phương thức ôn tập:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btn_create_mcq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_mcq_button"
                        android:backgroundTint="#FFB300"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:paddingVertical="12dp"
                        app:cornerRadius="8dp"
                        android:layout_marginBottom="12dp"/>

                    <Button
                        android:id="@+id/btn_create_open_ended"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/create_open_ended_button"
                        android:backgroundTint="#6C757D"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:paddingVertical="12dp"
                        app:cornerRadius="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phản hồi của Gia sư AI:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/tv_ai_response"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:padding="16dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:text="@string/ai_tutor_result_placeholder"
                    android:background="@drawable/rounded_card_background"
                    tools:text="Đang yêu cầu Gia sư AI... Vui lòng chờ."/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>