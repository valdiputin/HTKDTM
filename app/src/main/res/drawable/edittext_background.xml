<?xml version="1.0" encoding="utf-8"?>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <!-- Nền trắng -->
        <solid android:color="#FFFFFF" />

        <!-- Viền xám nhạt -->
        <stroke
            android:width="1dp"
            android:color="#DDDDDD" />

        <!-- Bo tròn -->
        <corners android:radius="12dp" />

        <!-- Đổ bóng nhẹ -->
        <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />
    </shape>